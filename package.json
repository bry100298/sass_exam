{
  "name": "sass",
  "version": "1.0.0",
  "description": "Frontend SASS Challenge",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "build:sass": "node-sass -r --output-style compressed scss/main.scss -o ./public/css",
    "watch:sass": "npm run build:sass -- -w"
  },
