  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "nunjucks": "^3.2.0",
    "sass": "^1.69.7",
    "winston": "^3.2.1"
  },
  "engines": {
    "node": ">=8"
  },
  "comments": {
    "build:sass": "This script compiles SASS files and outputs the compressed CSS.",
    "watch:sass": "This script watches for changes in SASS files and triggers the build."
  },
  "devDependencies": {
    "node-sass": "^9.0.0"
  }
}
